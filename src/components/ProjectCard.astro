---
// A card for displaying projects.
import { Image } from "astro:assets";

const { image, imageAlt, title, description, link } = Astro.props;
---

<div
  class="items-center justify-center grid grid-cols-4 grid-rows-2 bg-neutral-100 dark:bg-neutral-950 rounded-lg hover:-translate-y-1 ease-in-out duration-300 transition-all p-2"
>
  <Image class="row-span-2" src={image} alt={imageAlt} width={75} height={75} />
  <h1
    class="text-2xl text-black dark:text-white font-semibold col-start-2 col-span-3"
  >
    <a href={link} target="_blank" rel="noopener noreferrer">{title}</a>
  </h1>
  <p class="text-lg dark:text-gray-400 grid-col-start-2 col-start-2 col-span-3">
    {description}
  </p>
</div>
