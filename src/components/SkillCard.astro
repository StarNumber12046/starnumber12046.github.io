---
// A card for displaying skills.
const { skill, proficiency, width, color } = Astro.props;
---

<div
  class="p-4 dark:bg-neutral-950 bg-neutral-200 items-center rounded-md flex flex-row hover:-translate-y-1 ease-in-out duration-300 transition-all gap-2"
>
  <h1 class="text-2xl text-black dark:text-white font-semibold">{skill}</h1>
  <div class=`w-48 h-4 rounded-full bg-${color}-950/20`>
    <div
      class=`text-xs font-medium text-center p-0.5 leading-none rounded-full bg-${color}-500 dark:bg-${color}-300 text-${color}-900`
      style={`width: ${width};`}
    >
      {proficiency}
    </div>
  </div>
</div>
